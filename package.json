{
  "name": "tic-tac-toe",
  "version": "1.0.0",
  "description": "Simple browser-based Tic-Tac-Toe game.",
  "type": "module",
  "scripts": {
    "start": "http-server -p 4173 -c-1",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeeves-oc/tic-tac-toe.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jeeves-oc/tic-tac-toe/issues"
  },
  "homepage": "https://github.com/jeeves-oc/tic-tac-toe#readme",
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "http-server": "^14.1.1",
    "vitest": "^3.2.4"
  }
}
